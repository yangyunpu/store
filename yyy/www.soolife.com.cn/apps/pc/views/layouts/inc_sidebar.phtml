				<li class="{{active_n}}">
					<a title="如此生活" href="{{ n['target'] }}">
						{{ n['text'] }}
					</a>
					<b class="arrow"></b>
				</li>
				{% endfor %}
			</ul>
		</li>
{% endfor %}