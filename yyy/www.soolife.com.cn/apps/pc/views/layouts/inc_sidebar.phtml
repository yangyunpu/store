{% for m in menus %}
	<?php  $mm = strpos($nav,strtolower($m['name'])); ?>
	{% set active = (mm===false)?'':'active open' %}
		<li class="{{active}}">
			<a title="如此生活" href="{{ m['target'] }}" class="dropdown-toggle">
				<span class="menu-text"> {{ m['text'] }} </span>
			</a>
			<ul class="submenu">
				{% for n in m['items']%}
